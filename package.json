{
  "name": "next-app-router-todo-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "api": "node ./mocks/merge.js && json-server --watch --delay 1500 --routes ./mocks/routes.json ./mocks/db.json --port 3005",
    "lint:ci": "next lint --max-warnings=0",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json,css}'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:storybook": "test-storybook --url http://localhost:6006",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build --quiet",
    "storybook:serve": "npx http-server storybook-static -a localhost -p 6006 -s",
    "storybook:test": "npx wait-on http://localhost:6006 && npm run test:storybook",
    "storybook:ci": "npm run storybook:build && npx concurrently -k -s first \"npm run storybook:serve\" \"npm run storybook:test\"",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@types/node": "20.5.0",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.15",
    "eslint": "8.47.0",
    "eslint-config-next": "13.4.16",
    "next": "13.4.16",
    "postcss": "8.4.28",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.3.1",
    "@storybook/addon-coverage": "^0.0.9",
    "@storybook/addon-essentials": "^7.3.0",
    "@storybook/addon-interactions": "^7.3.0",
    "@storybook/addon-links": "^7.3.0",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.3.0",
    "@storybook/jest": "^0.1.0",
    "@storybook/nextjs": "^7.3.0",
    "@storybook/react": "^7.3.0",
    "@storybook/test-runner": "^0.13.0",
    "@storybook/testing-library": "^0.2.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-storybook": "^0.6.13",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-html-reporters": "^3.1.4",
    "json-server": "^0.17.3",
    "prettier": "^3.0.2",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "storybook": "^7.3.0"
  }
}
